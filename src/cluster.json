{
  "cluster": {
    "name": "minikube-aws",
    "installed": true,
    "cloud": {
      "provider": [
        {
          "id": "aws",
          "name": "AWS",
          "regions": [
            {
              "id": "eu-central-1",
              "name": "eu-central-1"
            },
            {
              "id": "eu-central-2",
              "name": "eu-central-2"
            },
            {
              "id": "eu-central-3",
              "name": "eu-central-3"
            }
          ]
        },
        {
          "id": "digitalocean",
          "name": "DigitalOcean"
        },
        {
          "id": "googlecloud",
          "name": "GoogleCloud",
          "regions": [
            {
              "id": "21",
              "name": "eu21"
            },
            {
              "id": "32l-2",
              "name": "eu32"
            },
            {
              "id": "e12ral-3",
              "name": "eu43"
            }
          ]
        }
      ],
      "region": "eu-central-1",
      "vpc": "default",
      "domain": "shalb.net"
    },
    "provisioner": {
      "type": [
        {
          "id": "minikube",
          "name": "Minikube"
        },
        {
          "id": "eks",
          "name": "EKS"
        },
        {
          "id": "clusterapi",
          "name": "ClusterApi"
        }
      ],
      "instanceType": "m5.large"
    },
    "clusterComponents": {
      "type": [
        {
          "id": "ingresscontroller",
          "name": "Ingress Controller"
        },
        {
          "id": "kubernetesdashboard",
          "name": "Kubernetes Dashboard"
        },
        {
          "id": "loggingwithelk",
          "name": "Logging with ELK"
        },
        {
          "id": "prometheus-grafana",
          "name": "Monitoring: Prometheus & Grafana"
        },
        {
          "id": "argocs",
          "name": "ArgoCD"
        },
        {
          "id": "letsencrypt",
          "name": "Cert-Manager LetsEncrypt"
        }
      ],
      "instanceType": "m5.large"
    }
  },
  "envs": [
    {
      "namespace": "observability",
      "apps": [
        "elk-logging",
        "prometheus-operator",
        "grafana"
      ]
    },
    {
      "namespace": "stage",
      "apps": [
        "nginx-ingress",
        "micro-services"
      ]
    },
    {
      "namespace": "github-runner",
      "apps": [
        "github-runner"
      ]
    }
  ],
  "apps": [
    {
      "name": "elk-logging",
      "helmfile": {
        "path": "git://github.shalb.com/cluster.dev/helmfile-logging.git?v=12",
        "version": "0.11.04"
      }
    },
    {
      "name": "prometheus-operator",
      "helm": {
        "repo": "stable/prometheus-operator",
        "version": "0.1.0"
      }
    },
    {
      "name": "micro-services",
      "execScript": "kustomize -k minikube/manifests/company-serives | kubectl apply -f"
    }
  ]
}